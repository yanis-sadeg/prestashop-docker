# ======================================
# MariaDB Configuration for PrestaShop
# ======================================

[mysqld]
# Network
bind-address=0.0.0.0
port=3306

# Character Set (PrestaShop requirement)
character-set-server=utf8mb4
collation-server=utf8mb4_unicode_ci

# ======================================
# InnoDB Performance Tuning
# ======================================
# Separate file per table (better for backups/recovery)
innodb_file_per_table=1

# Buffer Pool (CRITICAL - adjust based on available RAM)
# Recommendation: 50-70% of available RAM
# For 4GB RAM server: 2G, For 8GB: 4-5G
innodb_buffer_pool_size=1G
innodb_buffer_pool_instances=4

# Log Files (improves write performance)
innodb_log_file_size=256M
innodb_log_buffer_size=32M
innodb_flush_log_at_trx_commit=2
innodb_flush_method=O_DIRECT

# I/O Performance
innodb_io_capacity=2000
innodb_io_capacity_max=4000
innodb_read_io_threads=4
innodb_write_io_threads=4

# Additional InnoDB settings
innodb_stats_on_metadata=0
innodb_file_format=Barracuda
innodb_large_prefix=1

# ======================================
# Query Cache (deprecated in MariaDB 10.5+, kept for compatibility)
# ======================================
# Note: Query cache is disabled by default in modern MariaDB
# query_cache_type=0
# query_cache_size=0

# ======================================
# Connection & Thread Management
# ======================================
max_connections=200
max_allowed_packet=64M
thread_cache_size=50
table_open_cache=4000
table_definition_cache=2000

# ======================================
# Temporary Tables & Memory
# ======================================
tmp_table_size=64M
max_heap_table_size=64M

# ======================================
# Slow Query Log (for optimization)
# ======================================
slow_query_log=1
slow_query_log_file=/var/log/mysql/slow.log
long_query_time=2
log_queries_not_using_indexes=0

# ======================================
# Binary Logging (for replication/backup)
# ======================================
# Disabled by default for development
# Enable in production for point-in-time recovery
# log_bin=/var/log/mysql/mysql-bin.log
# expire_logs_days=7
# max_binlog_size=100M

# ======================================
# MyISAM Settings (legacy, but still used by some tables)
# ======================================
key_buffer_size=32M
myisam_sort_buffer_size=64M

# ======================================
# Security
# ======================================
# Disable LOAD DATA LOCAL INFILE (security)
local_infile=0

# Skip name resolution (performance + security)
skip-name-resolve

# ======================================
# Timeouts
# ======================================
wait_timeout=600
interactive_timeout=600
connect_timeout=10

[client]
default-character-set=utf8mb4

[mysql]
default-character-set=utf8mb4